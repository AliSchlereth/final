<div id="notice"></div>
<h1>UrLockBox</h1>
<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form><hr/>

<div class="filter">
  Filter:
  <input id="filter-input"/>
  <button id="read-button">Read</button>
  <button id="unread-button">UnRead</button>
</div>
<div id="links-list">
    <% @links.each do |link| %>
    <div class='link <%= link_read_status(link) %>' data-id='<%=link.id%>' id="link-<%= link.id %>">
      <p><%= link.hot_status %></p>
      <p class='link-title'><%= link.title %></p>
      <p class='link-url'> <%=link_to link.url, link.url %></p>
      <p class="link_read"><%= link.read %></p>
      <div class="link_buttons">
        <% if link.read == false %>
          <button class="mark-read">Mark as Read</button>
        <% else %>
          <button class="mark-unread">Mark as Unread</button>
        <% end  %>
        <%= link_to "Edit", edit_link_path(link), class:"button" %>
        <button class='delete-link'>Delete</button>
      </div>
    </div>
    <% end %>
</div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>
